<div class="<%= this.action %>" >
<div class="well create-application">
<legend>创建申请表单</legend>
<form class="form" id="new-application-form">
    <div class="row-fluid">
        <div class="span6">
            <fieldset class="control-group">
							<label>关区</label>
							<select name="subjection_org" ></select>	
            </fieldset>
     </div>
	 <div class="span6">
		<%== $.View('//docview/ui/views/department.ejs',this) %>
    </div>
</div>
    <div class="row-fluid">
	 <div class="span6">
           <fieldset>
                <label>抽单原由</label>
                <input name="application_originally" type="text" required />
            </fieldset>
        </div>
	 <div class="span6">
		<fieldset>
			<label>审批科长</label>
			<div class="user_select require_select" data-type='kz_users' ></div>
           </fieldset>
	 </div>

    </div>
<hr />
    <div class="row-fluid">
        <div class="span12">

            <fieldset class="control-group">
            	<label style="display:inline-block;">抽单信息</label>
				<span style="display:inline-block;" ><button type="button" class="btn btn-mini btn-primary new-requisition-details"><i class="icon-plus icon-white"></i> 添加抽单信息</button> 
<button type="button" class="btn btn-mini btn-primary import-requisition-details"><i class="icon-plus icon-white"></i> 批量导入抽单信息</button> 
</span>
	<div class="modal hide fade" >
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>批量导入：</h3>
  </div>
  <div class="modal-body">
      <span>导入文件格式，每行实例：22252012××××××××××(单证号)&nbsp; &nbsp; &nbsp;    理单号</span>
      <div><textarea class='format_record' type="textarea" name="format_record" wrap="virtual" style="overflow: auto; width: 514px; margin: 0px 0px 9px; height: 226px;"> </textarea></div>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn btn-close">Close</a>
    <a href="#" class="btn btn-primary format_text">批量导入</a>
  </div>
</div>			
<!--				<div>批量导入：<textarea class='format_record' type="textarea" name="format_record" wrap="virtual" style="overflow:auto;width: 455px;"> </textarea><input type='button' class='format_text' value='转换'/></div>
-->
				<p>&nbsp;</p>
				<div class="requisition-details-text-holder">
					<%== $.View("//docview/ui/requisition/views/application/new_requisition_details.ejs")%>
				</div>
            </fieldset>	
        </div>
        <div class="pull-left">
            <button type="submit" class="btn btn-primary" >提交申请</button>
			<div style="display: inline-block;" ><label class='label label-info lbl-wait' style="display:none;" >Waiting ..</label></div>
			<br />
        </div>
    </div>
</form>
</div>
</div>

