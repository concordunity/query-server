<h1>Listing documents</h1>

<table>
  <tr>
    <th>Doc</th>
    <th>Pages</th>
    <th>Folder</th>
    <th>Doc type</th>
    <th>Org</th>
    <th>Org applied</th>
    <th>Modified</th>
    <th>Checkedout</th>
    <th>Inquired</th>
    <th>Label</th>
    <th>Serial number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= document.doc_id %></td>
    <td><%= document.pages %></td>
    <td><%= document.folder %></td>
    <td><%= document.doc_type %></td>
    <td><%= document.org %></td>
    <td><%= document.org_applied %></td>
    <td><%= document.modified %></td>
    <td><%= document.checkedout %></td>
    <td><%= document.inquired %></td>
    <td><%= document.label %></td>
    <td><%= document.serial_number %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

